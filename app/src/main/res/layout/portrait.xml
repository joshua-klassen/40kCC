<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/view_deployments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_deployments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view_factions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_factions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_deployments" />

    <Button
        android:id="@+id/view_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_games"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_factions" />

    <Button
        android:id="@+id/view_missions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_missions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_games" />

    <Button
        android:id="@+id/view_objectives"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_objectives"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_missions" />

    <Button
        android:id="@+id/view_outcomes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_outcomes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_objectives" />

    <Button
        android:id="@+id/view_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_players"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_outcomes" />

    <Button
        android:id="@+id/view_predictions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_predictions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_players" />

    <Button
        android:id="@+id/view_rounds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_rounds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_predictions" />

    <Button
        android:id="@+id/view_teams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_teams"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_rounds" />

    <Button
        android:id="@+id/view_tournaments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_tournaments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_teams" />

</androidx.constraintlayout.widget.ConstraintLayout>